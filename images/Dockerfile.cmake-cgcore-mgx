    rm ${PRJ}.tar.gz  &&\
    cd .. &&\
    cmake -S src/${PRJ} -B build/${PRJ} -DVTK_9:BOOL=ON -DCMAKE_INSTALL_PREFIX=${INSTALL_DIR}/${PRJ} &&\
    cmake --build build/${PRJ} --target install
#==========================================
ARG PRJ=qtvtk
