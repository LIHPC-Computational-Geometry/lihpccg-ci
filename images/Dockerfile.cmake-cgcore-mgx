    rm ${PRJ}.tar.gz  &&\
    cd .. &&\
    cmake -S src/${PRJ} -B build/${PRJ} -DCMAKE_PREFIX_PATH=${INSTALL_DIR}/tkutil -DCMAKE_INSTALL_PREFIX=${INSTALL_DIR}/${PRJ} -DUSE_PYTHON_3:BOOL=ON &&\
    cmake --build build/${PRJ} --target install
#==========================================
ARG PRJ=preferences
ARG PRJ_VERSION=5.6.2
RUN cd src &&\
    curl -L -o ${PRJ}.tgz ${GH_BASE}/${PRJ}/archive/refs/tags/v${PRJ_VERSION}.tar.gz &&\
    tar xvfz ${PRJ}.tgz &&\
    rm ${PRJ}.tar.gz  &&\
    cd .. &&\
    cmake -S src/${PRJ} -B build/${PRJ} -DCMAKE_PREFIX_PATH="${INSTALL_DIR}/tkutil;${INSTALL_DIR}/qtutil" -DCMAKE_INSTALL_PREFIX=${INSTALL_DIR}/${PRJ} &&\
    cmake --build build/${PRJ} --target install
#==========================================
ARG PRJ=qualif
ARG PRJ_VERSION=2.3.5
