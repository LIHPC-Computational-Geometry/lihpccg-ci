    cd .. &&\
    cmake -S src/${PRJ} -B build/${PRJ} -DCMAKE_PREFIX_PATH="${INSTALL_DIR}/gmds072;${INSTALL_DIR}/gmdscea;${INSTALL_DIR}/lima" -DCMAKE_INSTALL_PREFIX=${INSTALL_DIR}/${PRJ} &&\
    cmake --build build/${PRJ} --target install
#==========================================
ARG PRJ=vtkcontrib
ARG PRJ_VERSION=4.6.4
RUN cd src &&\
    curl -L -o ${PRJ}.tgz ${GH_BASE}/${PRJ}/archive/refs/tags/v${PRJ_VERSION}.tar.gz &&\
